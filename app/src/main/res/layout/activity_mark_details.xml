<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shared.MarkDetails">

  <ImageButton
      android:id="@+id/markDetails_backButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:backgroundTint="@color/white"
      android:onClick="goBack"
      android:padding="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/markDetails_Title"
      app:layout_constraintEnd_toStartOf="@+id/markDetails_Title"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/markDetails_Title"
      app:srcCompat="@drawable/ic_arrow_left" />

  <TextView
      android:id="@+id/markDetails_Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:text="@string/Mark_details"
      android:textAppearance="@style/CommonText.MediumSize.Dark"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/markDetails_date"
      style="@style/CommonText.MediumSize.Dark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="72dp"
      android:text="Дата: "
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/markDetails_Title" />

  <TextView
      android:id="@+id/markDetails_mark"
      style="@style/CommonText.MediumSize.Dark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:text="Оцінка: "
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/markDetails_date" />

  <TextView
      android:id="@+id/markDetails_description"
      style="@style/CommonText.MediumSize.Dark"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="24dp"
      android:text="Деталі: "
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/markDetails_mark" />


</androidx.constraintlayout.widget.ConstraintLayout>