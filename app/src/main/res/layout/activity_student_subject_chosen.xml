<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentSubjectChosen">

    <ImageButton
        android:id="@+id/studentSubjectChosen_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        android:onClick="goBack"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/studentSubjectChosen_Title"
        app:layout_constraintEnd_toStartOf="@+id/studentSubjectChosen_Title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/studentSubjectChosen_Title"
        app:srcCompat="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/studentSubjectChosen_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Алгебра"
        android:textAppearance="@style/CommonText.MediumSize.Dark"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacherClassChosenBtnHomework"
        style="@style/CommonText.MediumSize"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:onClick="chooseHomework"
        android:text="@string/Homework"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentSubjectChosen_Title" />

    <Button
        android:id="@+id/teacherClassChosenBtnMarks"
        style="@style/CommonText.MediumSize"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"
        android:onClick="chooseMarks"
        android:text="@string/Marks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentSubjectChosen_Title" />


</androidx.constraintlayout.widget.ConstraintLayout>